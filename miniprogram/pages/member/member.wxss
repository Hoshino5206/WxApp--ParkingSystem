/* 顶大 */
.header{
  display:flex;
  /* align-items: center; */
  height: 200px;
  /* text-align:center; */
  margin-top: 2%;
  /* background-color: mintcream; */
}

/* 顶中 */
.dakuang{
  display: flex;
  height: 160px;
  width: 94%;
  margin-top: 5%;
  margin-left: 3%;
  border-top-left-radius:15px;
  border-top-right-radius:15px;
  border-bottom-left-radius:15px;
  border-bottom-right-radius:15px;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgb(1, 0, 2);
  background-color: rgb(243, 236, 248);
  
}

/* 月卡天数字体框 */
.word{
  display: flex;
  margin-left: 7%;
  margin-top: 3%;
  margin-bottom: 30%;
  width: 150px;
  flex-direction: column;
}

/* 月卡天数字体 */
.word_1{
  font-family: "楷体";
  font-size: 20px;
  margin-top: 20rpx;
  width: 250px;
}

.word_3{
  width: 250px;
  margin-top: 15%;
  font-size: 20px;
  font-family: "楷体";
}

/* 底大 */
.header_1{
  display: flex;
  height: 60px;
}

/* 底中框 */
.header_2{
  display: flex;
  height: 30px;
  width: 94%;
  margin-top: 5%;
  margin-left: 3%;
}

/* 字体view */
.word_d{
  display: flex;
  height:30px;
  width: 100%;
}

/* 字体text */
.word_2{
  display: flex;
  font-size: 23px;
  font-weight: 100px;
  font-family: "宋体";
  height: 30px;
}

/* 选择按钮 */
.button_container{
  display: flex;
  border-radius: 6%;
  flex-direction: row;
  color: white;
  height: 80px;
  align-items: center;
  padding-left: 1%;
  padding-right: 1%;
}

/* 选前 */
.normal_button{
  border-radius: 6%;
  background:rgb(255, 255, 255);
}

/* 选后 */
.checked_button{
  border-radius: 6%;
  background:rgb(65, 175, 226);
  color:rgb(14, 8, 8);
}

