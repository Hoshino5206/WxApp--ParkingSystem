/* pages/order/order.wxss */

.top{
  width: 100%;
  display: block;
  box-sizing: border-box;
  padding-top: 0.3%;
}
.function_parant_container{
  display: flex;
  flex:1;
  flex-direction: column;
  background-color: white;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(85, 85, 85, 0.10);
  border-radius: 6px;
  margin: 15rpx;
  padding:  10rpx;
}
.function_Sub_container{
  display: flex;
  width: 93%;
  height: 100%;
  align-items: center;
  text-align: center;
  flex-direction: row;

}
.function_Sub2_container{
  display: flex;
  align-items: center;
  text-align: center;
  flex-direction: row;
  padding: 15rpx 12rpx 10rpx;
  justify-content: space-between;
}

.function_introduce_fare{
  display: flex;
  flex-direction: column;
  flex:1;
}
.function_introduce_expend{
  font-size:3.6vw;
  display:block;
  padding:0.5vh 0;
  word-wrap:break-word;
  word-break:normal;
  text-align:justify;
  color:#767676 ;
  flex-direction: column;
}
.function_introduce_pack{
  font-size:3.8vw;
  display:block;
  padding:0.3vh 0;
  word-wrap:break-word;
  word-break:normal;
  text-align:justify;
  flex:1;
  flex-direction: column;
}
.function_introduce_img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.function_introduce_text{
  font-size:3.8vw;
  display:block;
  padding:0.3vh 0;
  word-wrap:break-word;
  word-break:normal;
  text-align:justify;
  flex-direction: row;
}
.function_introduce_below_tag{
  display: flex;
  flex-direction: row;
}
.function_introduce_line{
  width:100%;
  height:1rpx;
  background-color:lightgray;
}
.function_introduce_text_font{
  
  color: red;
}
.function_introduce_packing_name{
  font-size:4.5vw;
  display:block;
  padding:0.3vh 0;
  word-wrap:break-word;
  word-break:normal;
  text-align:justify;
  flex-direction: row;
  font-weight: 600;
}